{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"subcommand": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options" : {
				"cwd" : "${workspaceFolder}"
			},
			"label": "Rust: cargo build - filecoin-signing-tools"
		},
		{
			"type": "cargo",
			"subcommand": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"options" : {
				"cwd" : "${workspaceFolder}"
			},
			"label": "Rust: cargo test - filecoin-signing-tools"
		}
	]
}